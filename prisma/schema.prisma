generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Tenant {
  id        String   @id @default(cuid())
  name      String
  users     UserTenant[]
  invites   Invite[]   
  contents  Content[]
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  tenants   UserTenant[]
}

model UserTenant {
  id        String   @id @default(cuid())
  userId    String
  tenantId  String
  role      Role
  user      User     @relation(fields: [userId], references: [id])
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model Invite {
  id        String   @id @default(cuid())
  email     String
  tenantId  String
  role      Role
  token     String   @unique
  createdAt DateTime @default(now())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}


model Content {
  id        String   @id @default(cuid())
  tenantId  String
  title     String
  inputText String
  outputs   Json
  createdAt DateTime @default(now())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}




